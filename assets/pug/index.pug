extends _layout

block vars
	- array = { body_class:'', layout_mod:'', sub_keywords:'', title_inner:'HOME' }

	-
		heroSlider = [
			{
				title: 'Займы под залог ПТС – авто остаётся с вами!',
				text: 'Оформляем займы без передачи авто: перезалог, доверенность, ограничения в ПТС. Решим вопрос за час – даже на дому!',
				imgDesktop: '/i/hero-slide-desktop-1.jpg',
				imgTablet: '/i/hero-slide-tablet-1.jpg',
				imgMobile: '/i/hero-slide-mobile-1.jpg',
				btn: ['Получить деньги сегодня', 'Узнать подробности']
			},
			{
				title: 'Займы под залог недвижимости',
				text: 'Квартира, дом или коммерческая недвижимость — одобряем до 80 % от стоимости объекта за 1 день.',
				imgDesktop: '/i/hero-slide-desktop-2.jpg',
				imgTablet: '/i/hero-slide-tablet-2.jpg',
				imgMobile: '/i/hero-slide-mobile-2.jpg',
				btn: ['Получить деньги сегодня', 'Узнать подробности']
			},
			{
				title: 'Потребительские кредиты',
				text: 'Без залога и поручителей. Ставка от 4,9 % годовых. Решение за 15 минут.',
				imgDesktop: '/i/hero-slide-desktop-3.jpg',
				imgTablet: '/i/hero-slide-tablet-3.jpg',
				imgMobile: '/i/hero-slide-mobile-3.jpg',
				btn: ['Оформить заявку', 'Подробнее']
			},
			{
				title: 'Автокредит до 1 млн ₽',
				text: 'Новый или б/у автомобиль. Первоначальный взнос — 0 %. Оформление в день обращения.',
				imgDesktop: '/i/hero-slide-desktop-4.jpg',
				imgTablet: '/i/hero-slide-tablet-4.jpg',
				imgMobile: '/i/hero-slide-mobile-4.jpg',
				btn: ['Рассчитать платёж', 'Подробнее']
			},
			{
				title: 'Автокредит до 1 млн ₽ (повтор)',
				text: 'Новый или б/у автомобиль. Первоначальный взнос — 0 %. Оформление в день обращения.',
				imgDesktop: '/i/hero-slide-desktop-5.jpg',
				imgTablet: '/i/hero-slide-tablet-5.jpg',
				imgMobile: '/i/hero-slide-mobile-5.jpg',
				btn: ['Рассчитать платёж', 'Подробнее']
			},
		];

block content_block
	section.hero
		.section_in
			.hero_main
				.hero_slider.swiper
					.swiper-wrapper
						each slide in heroSlider
							.swiper-slide
								.hero_slide
									.hero_slide__content
										h1=slide.title
										p=slide.text
										.hero_slide_btn__row
											.hero_btn.btn.white.primary=slide.btn[0]
											if slide.btn.length > 1
												.btn.hero_btn.white.secondary=slide.btn[1]
									.hero_img
										picture
											source(srcset=slide.imgDesktop, media='(min-width:1024px)')
											source(srcset=slide.imgTablet,  media='(min-width:640px)')
											img(src=slide.imgMobile, alt=slide.title)
	section.services 
		.section_in 
			.services_main
				-
					var services = [
						{
							title: 'Займы под залог ПТС',
							txt: 'Получите деньги, используя свой автомобиль в качестве залога',
							slideIndex: 0,
						},
						{
							title: 'Займы под залог недвижимости',
							txt: 'Крупные суммы займов и выгодные процентные ставки',
							slideIndex: 1,
						},
						{
							title: 'Потребительские кредиты',
							txt: 'На любые цели — с выгодными ставками и мгновенным одобрением!',
							slideIndex: 2,
						},
						{
							title: 'Автокредит до 1 млн ₽',
							txt: 'Получите деньги, используя свой автомобиль в качестве залога',
							slideIndex: 3,
						},
					]
				ul
					each item in services
						li(onclick=`goToSlide(${item.slideIndex}, event)`) 
							h3=item.title
							p=item.txt 
							.services_item__link 
								+iconify({icon: 'bi:chevron-right'})
	section.calculator 
		.section_in
			.calculator_main__w 
				.calculator_main 
					.calculator__slider__w
						h3 Калькулятор займа под залог ПТС
						.calculator__slider__form__w 
							.calculator__slider__form
								p Сумма займа
								span#loanValue 400 000&nbsp;₽
								.calculator__slider(data-initial="400000")
									.slider__track
									.slider__progress
								input#loanRange(
									type="range"
									min="30000"
									max="6000000"
									step="10000"
									value="400000"
									style="display:none"
								)
						.calculator_value__row 
							.calulator_slider__start 30 тыс.
							.calulator_slider__end 6 млн.
						.calculator__months 
							p Срок займа(месяцев):
							ul.calculator__months__select
								each item in ['12', '18', '24', '36']
									li 
										input(type="radio", name="datetime" id=item + 'date')
										label(for=item + 'date')=item
					.calculator__forms 
						h3 Ежемесячный платеж
						.calculator_forms__qty 
							.calculator_forms__qty__minus
								+iconify({icon:'ic:baseline-minus'})
							.calculator_forms__qty__input 210 000 ₽
							.calculator_forms__qty__plus
								+iconify({icon: 'ic:baseline-plus'})
						.calculator_forms__col 
							+input({place: 'Ваш телефон'})
							+input({place: 'ФИО'})
						.calculator__forms__agreement 
							input(type="checkbox" id="agreement-calc")
							label(for="agreement-calc")
								.calculator__forms__agreement_icon 
									+iconify({icon: 'mingcute:check-line'})
								p Я даю согласие на обработку персональных данных
						.btn.calc_btn.primary Оставить заявку
				.calculator__bottom 
					ul
						each item in ['Без справок о доходах', 'Решение за 15 минут', 'На 15% выгоднее банка', '127 человек подали заявку сегодня']
							li
								+iconify({icon: 'material-symbols:check-rounded', width: '3.5rem', height: '3.5rem'})
								p=item
	section.whats
		.section_in 
			.whats_main 
				h4 Как получить деньги?
				ul.whats__list
					li.whats_item 
						.whats_item__head
							h3 Подача заявки и предоставление необходимых документов
							p У вас займет это не больше 10 минут
						.whats_decor__img 
							img(src="/i/whats1.jpg")
					li.whats_item 
						.whats_item__head
							h3 Подача заявки и предоставление необходимых документов
							p У вас займет это не больше 10 минут
						.whats_decor__img 
							img(src="/i/whats2.jpg")
					li.whats_item 
						.whats_item__head
							h3 Подача заявки и предоставление необходимых документов
							p У вас займет это не больше 10 минут
						.whats_decor__img 
							img(src="/i/whats3.jpg")
	section.actions 
		.section_in 
			.actions__main 
				.actions__form 
					h4 Получите персональное предложение
					+input({place: 'Ваш телефон'})
					.btn.actions_btn.primary Узнать
				.actions_img 
					img(src="/i/form-desktop.png")
	section.require 
		.section_in 
			.require_main 
				h4 Что необходимо для получения займа?
				ul.require__list
					li.require__item 
						h5 Условия получения займа
						ul.require_item__list 
							li От 100 000 рублей
							li От 2.5% в месяц
							li Оформление по договору займа
							li Без переоформления
							li Оформление до 36 месяцев
							li Без комиссии
					li.require__item 
						h5 Требования
						ul.require_item__list 
							li Гражданство РФ
							li Авто не старше 2002 года выпуска
							li Автомобиль на ходу
							li Стоит на учете
							li Возраст от 18 до 70(включительно)
					li.require__item 
						h5 Документы
						ul.require_item__list 
							li ПТС - паспорт транспортного средства
							li СТС - свидетельство транспортного средства
							li Паспорт РФ
	section.reviews 
		.section_in 
			.reviews_main 
				.reviews__head 
					h5 Опыт наших клиентов
					.reviews__nav 
						.reviews_nav_prev 
							+iconify({icon: 'prime:arrow-left', width: '4rem', height: '4rem'})
						.reviews_nav_next
							+iconify({icon: 'prime:arrow-right', width: '4rem', height: '4rem'})
				.reviews_slider.swiper 
					.swiper-wrapper 
						.swiper-slide 
							.reviews_slide 
								.reviews_slide__content 
									.reviews_slide_content__head 
										h6 Виктория
										p 15 июня 2019
									ul.reviews_slide__params 
										li 
											span Марка и модель автомобиля
											p Toyota RAV4
										li 
											span Год выпуска
											p 2012
										li 
											span Сумма займа
											p 600 000 ₽
										li 
											span Ставка в месяц
											p 4,2%
									.reviews_slide__txt 
										p Хотелось бы поблагодарить компанию за срочную помошь в получение денег. К сожалению не было возможности собирать справки для банков и я решила обратиться в автоломбард. К моему удивлению автомобиль оставлять не пришлось и я заложила птс и уехала на своём любимом автомобиле. Моей радости нет предела. Спасибо Вам за работу!
								.reviews_slide__img 
									img(src="/i/reviews.jpg")
	section.faq 
		.section_in 
			.faq_main__w 
				h6 Часто задаваемые вопросы
				.faq_main
					.faq_col 
						ul.faq_acc
							-for(i = 0; i < 4; i++)
								li.faq_item
									.faq_item__head 
										p Какой транспорт принимается в залог?
										.faq_item__icon
											+iconify({icon: 'mynaui:plus', width: '3rem', height: '3rem'})
									.faq_item__content 
										p Автомобили (отечественные, зарубежные любого года выпуска), мототранспорт, специальная техника (дорожная, строительная, др.), водный транспорт (яхты, лодки, катера).
					.faq_col 
						ul.faq_acc
							-for(i = 0; i < 3; i++)
								li.faq_item
									.faq_item__head 
										p Какой транспорт принимается в залог?
										.faq_item__icon
											+iconify({icon: 'mynaui:plus', width: '3rem', height: '3rem'})
									.faq_item__content 
										p Автомобили (отечественные, зарубежные любого года выпуска), мототранспорт, специальная техника (дорожная, строительная, др.), водный транспорт (яхты, лодки, катера).
	section.addservices 
		.section_in 
			.addservices_main 
				h6 Дополнительные услуги
				ul.addservices_list 
					li.addservices_item 
						.addservices_item__head 
							h3 Перезалог автомобиля
							p Деньги под залог автомобиля без его продажи
						.addservices_item_bottom
							.addservices_item__link 
								+iconify({icon: 'bi:chevron-right'})
							.addservices_item__img 
								img(src="/i/addservices-1.png")
					li.addservices_item 
						.addservices_item__head 
							h3 ПТС по доверенности
							p Оформление через доверенное лицо без переоформления авто
						.addservices_item_bottom
							.addservices_item__link 
								+iconify({icon: 'bi:chevron-right'})
							.addservices_item__img 
								img(src="/i/addservices-2.png")
					li.addservices_item 
						.addservices_item__head 
							h3 ПТС с ограничениями
							p Залог авто с ограничениями и индивидуальными условиями
						.addservices_item_bottom
							.addservices_item__link 
								+iconify({icon: 'bi:chevron-right'})
							.addservices_item__img 
								img(src="/i/addservices-3.png")
					li.addservices_item 
						.addservices_item__head 
							h3 Выезд менеджера
							p Оформление займа на дому — экономия времени, без визита в офис
						.addservices_item_bottom
							.addservices_item__link 
								+iconify({icon: 'bi:chevron-right'})
							.addservices_item__img 
								img(src="/i/addservices-4.png")
	section.about 
		.section_in
			h6 О нашей компании
			.about_main.mb22
				.about_action 
					picture
						source(srcset="/i/about.jpg", media='(min-width:1024px)')
						source(srcset="/i/about.jpg",  media='(min-width:640px)')
						img(src="/i/about.jpg", )
					.about_action__content
						h6 «ОК Залог» более <br/>10 лет с вами!
						p Мы работаем без скрытых комиссий, гарантируем полную конфиденциальность и возвращаем документы в день погашения
						.btn.about_btn.primary.white.border-none.form_open Оставить заявку
				.about_list 
					.about_item 
						.about_item__img 
							img(src="/i/about-list-1.jpg")
						.about_item__content 
							h6 5000+
							p Клиентов воспользовалось нашими услугами
					.about_item 
						.about_item__img 
							img(src="/i/about-list-2.jpg")
						.about_item__content 
							h6 97 %
							p Клиентов рекомендуют нас друзьям
					.about_item 
						.about_item__img 
							img(src="/i/about-list-3.jpg")
						.about_item__content 
							h6 1,4 млрд ₽
							p Мы предоставили займов на такую сумму
					.about_item 
						.about_item__img 
							img(src="/i/about-list-4.jpg")
						.about_item__content 
							h6 2800+
							p Клиентов оценили нас на 4,8/5
	section.homenews 
		.section_in 
			.homenews__main.mb22 
				.homenews__head 
					h6 Новости
					.btn.homenews_btn.primary Оставить заявку
				ul.homenews__list
					-for(i = 0; i < 4; i++)
						li.home_news__item
							+news
	section.maps 
		.section_in 
			.maps_main 
				h6 Где мы расположены?
				.map
					.map__card 
						span Наш адрес:
						p г. Москва, ул. 7
					<script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Af5d613db8d5145f7494279af72d753fda4b3f86091e258a4d73b38e9e906807b&amp;width=100%25&amp;height=100%&amp;lang=ru_RU&amp;scroll=false"></script>
	section.fform
		.section_in 
			.fform_main.mb18 
				.fform_form__col
					.fform_form__head 
						h6 Остались вопросы?
						p Оставьте заявку и мы свяжемся с вами в течение 5 минут
					.fform_form
						.fform_form__col
							+input({place: 'Ваш телефон'})
							+input({place: 'ФИО'})
						.calculator__forms__agreement 
							input(type="checkbox" id="agreement-forms")
							label(for="agreement-forms")
								.calculator__forms__agreement_icon 
									+iconify({icon: 'mingcute:check-line'})
								p Я даю согласие на обработку персональных данных
						.btn.fform_btn.primary Оставить заявку
				.fform_col__img 
					img(src="/i/fform.jpg")