			+customSelect({
				id: "type",
				label: "Категория",
				placeholder: "Выберите или введите",
				options: ["Все", "Квартира", "Дуплекс", "Вилла", "Новостройка", "Проект", "Земля", "Коммерческая"],
				multiple: true,
			})
