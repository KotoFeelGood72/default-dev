//- _mixins/pageHead.pug
//- ----------------------------------------------
//- color  – 'white' | 'black'
//- crumbs – массив крошек (строки или {href, text})
mixin pageHead(color = 'white', crumbs = [])
	-                         // ← открытие JS-блока
		const txt  = color === 'black' ? 'u-text-black'      : 'u-text-white'
		const brd  = color === 'black' ? 'breadcrumbs--black': 'breadcrumbs--white'
		const back = color === 'black' ? 'page-head--light'  : 'page-head--blue'
			// ← здесь JS-блок КОНЧИЛСЯ
	section.page-head(class=back)   // ↓ дальше — обычная разметка Pug
		.section_in
			if crumbs.length
				nav.breadcrumbs(class=brd)
					ul
						each crumb, i in crumbs
							li
								if i
									span.dot &bull;
								if typeof crumb === 'string'
									span(class=txt)= crumb
								else if crumb.href
									a(class=txt, href=crumb.href)= crumb.text
								else
									span(class=txt)= crumb.text
